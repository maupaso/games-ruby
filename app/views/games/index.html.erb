<h1>Listing games</h1>

<table class="table table-striped table-hover my-table">
  <thead>
    <tr>
      <th class="col-xs-1">Name</th>
      <th class="col-xs-1">Category</th>
      <th>Imageurl</th>
      <th class="col-xs-5">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td class="col-xs-1"><%= game.name %></td>
        <td class="col-xs-1"><%= game.category %></td>
        <td class="long-string col-xs-1 small-size"><%= game.imageURL %></td>
        <td class="col-xs-8"><%= game.description %></td>
        <td class=" small-size"><%= link_to 'Show', game %></td>
        <td class=" small-size"><%= link_to 'Edit', edit_game_path(game) %></td>
        <td class=" small-size"><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

